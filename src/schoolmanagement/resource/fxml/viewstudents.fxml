                                               style="-fx-background-color: #0068B1;" text="Refresh" textFill="WHITE">
                                       <graphic>
                                          <ImageView fitHeight="27.0" fitWidth="24.0" pickOnBounds="true"
                                                     preserveRatio="true">
                                             <image>
                                                <Image url="@../image/view/icons8_refresh_30px.png"/>
